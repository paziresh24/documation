{
  "openapi": "3.0.1",
  "servers": [
    {
      "url": "https://apigw.paziresh24.com"
    }
  ],
  "security": [
    {
      "APIKeyHeader": []
    }
  ],
  "info": {
    "title": "Jahannama APIs",
    "version": "v1.0.0"
  },
  "paths": {
    "/open-platform/v1/jahannama/search": {
      "get": {
        "summary": "Search",
        "description": "Search for something based on text, center, result type, and expertise.",
        "operationId": "Search",
        "parameters": [
          {
            "name": "text",
            "in": "query",
            "description": "The text to search for.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "center",
            "in": "query",
            "description": "The center id for the search.",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "result_type",
            "in": "query",
            "description": "The result type for the search.",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "expertise",
            "in": "query",
            "description": "The expertise for the search.",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/searchResponse"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "searchResponse": {
        "type": "object",
        "properties": {
          "search": {
            "type": "object",
            "properties": {
              "total": {
                "type": "integer",
                "examples": [6]
              },
              "pagination": {
                "type": "object",
                "properties": {
                  "limit": {
                    "type": "integer",
                    "examples": [20]
                  },
                  "page": {
                    "type": "integer",
                    "examples": [1]
                  }
                }
              },
              "result": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "examples": ["540"]
                    },
                    "type": {
                      "type": "string",
                      "examples": ["doctor"]
                    },
                    "title": {
                      "type": "string",
                      "examples": ["دکتر پروفسور محمد تقی نوربالا"]
                    },
                    "image": {
                      "type": "string",
                      "examples": ["/api/getImage/p24/search-men/file.jpg"]
                    },
                    "view": {
                      "type": "string",
                      "examples": ["1219K"]
                    },
                    "satisfaction": {
                      "type": "integer",
                      "examples": [87]
                    },
                    "rates_count": {
                      "type": "integer",
                      "examples": [8716]
                    },
                    "display_expertise": {
                      "type": "string",
                      "description": "return this field If type=`doctor`",
                      "examples": ["متخصص بیماریهای پوست و مو"]
                    },
                    "url": {
                      "type": "string",
                      "examples": ["/dr/دکتر-پروفسور-نور-بالا/"]
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "APIKeyHeader": {
        "type": "apiKey",
        "name": "x-api-key",
        "in": "header"
      }
    }
  },
  "x-original-swagger-version": "2.0"
}
